%.d: %.cc
	set -e; $(CXX) -MM $(CXXFLAGS) $< 	| sed 's/\($*\)\.o[ :]*/.o $@ : /g' > $@; 	[ -s $@ ] || rm -f $@

%.o: %.cc
	$(CXX) $(CXXFLAGS) -c $<

